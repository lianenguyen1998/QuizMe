<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund_liste"
    tools:context=".Startseite">

    <TextView
        android:id="@+id/textview_leben1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="top|right"
        android:text=""
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_leben" />

    <TextView
        android:id="@+id/textview_leben2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="top|right"
        android:text=""
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_leben" />

    <TextView
        android:id="@+id/textview_leben3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="top|right"
        android:text=""
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_leben" />

    <TextView
        android:id="@+id/text_view_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/level_1"
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_level_neu" />

    <TextView
        android:id="@+id/textview_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center|top"
        android:text="@string/_30"
        android:textSize="30sp"
        app:drawableTopCompat="@drawable/vector_timer" />

    <TextView
        android:id="@+id/textview_LebenCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/leben_3"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-1dp"
        android:layout_marginTop="188dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/hinweis"
        android:fontFamily="@font/raleway_light"
        android:padding="8dp"
        android:text="@string/welchen_namen_hatte_java_urspr_nglich"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#505050"
        android:textSize="30sp" />

    <Button
        android:id="@+id/hinweis"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="277dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2E7D91"
        android:fontFamily="@font/raleway_light"
        android:padding="8dp"
        android:shape="rectangle"
        android:text="@string/hinweis"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableTopCompat="@drawable/vector_hinweis" />


    <Button
        android:id="@+id/choice1"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/hinweis"
        android:layout_centerInParent="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="-133dp"
        android:layout_toStartOf="@id/hinweis"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/raleway_light"
        android:padding="8dp"
        android:text="@string/jasa"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_below="@id/hinweis"
        android:layout_centerInParent="true"
        android:layout_marginTop="29dp"
        android:layout_marginEnd="-520dp"
        android:layout_toStartOf="@id/hinweis"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/raleway_light"
        android:padding="8dp"
        android:text="@string/chai"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/choice3"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="272dp"
        android:layout_marginTop="505dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/raleway_light"
        android:padding="8dp"
        android:text="@string/oak"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/choice4"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="658dp"
        android:layout_marginTop="506dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/raleway_light"
        android:padding="8dp"
        android:text="@string/lase"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/quit"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="-9dp"
        android:layout_marginBottom="-3dp"
        android:background="@drawable/rounded_corners_transparent"
        android:drawableTint="#272626"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="@string/abbrechen"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:drawableTopCompat="@drawable/vector_close" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="34dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="684dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/quizme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#505050"
        android:textSize="24sp" />

    <Chronometer
        android:id="@+id/Textview_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="170dp"
        android:layout_marginBottom="210dp"
        android:textSize="24sp" />

</RelativeLayout>
