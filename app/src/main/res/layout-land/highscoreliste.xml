<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Startseite"
    android:background="@drawable/hintergrund_liste"
    android:id="@+id/hintergrundListe_id">


    <Button
        android:id="@+id/neuesSpiel"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="709dp"
        android:layout_marginBottom="67dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#2E7D91"
        android:drawableTint="@color/teal_700"
        android:fontFamily="@font/raleway_light"
        android:text="neues Spiel"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:iconPadding="8dp" />

    <Button
        android:id="@+id/zurückzurStartseite"
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="259dp"
        android:layout_marginBottom="69dp"
        android:background="@drawable/button_round"
        android:backgroundTint="#2E7D91"
        android:drawableTint="@color/teal_700"
        android:fontFamily="@font/raleway_light"
        android:text="zurück zur Startseite"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:iconPadding="8dp" />

    <TextView
        android:id="@+id/highscoreliste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="475dp"
        android:fontFamily="@font/raleway_medium"
        android:lineSpacingExtra="8sp"
        android:padding="8dp"
        android:text="@string/highscore_liste"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#1E1E1E"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/logo6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1158dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/quizme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="24sp" />


    <include layout="@layout/tableviewhighscore"/>

    <TextView
        android:id="@+id/logo"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="-11dp"
        android:layout_marginEnd="1176dp"
        android:layout_marginBottom="-2dp"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="@string/quizme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="22sp" />

</RelativeLayout>

