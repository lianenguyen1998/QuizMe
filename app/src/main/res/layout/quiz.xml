<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hintergrund"
    tools:context=".Startseite">

    <TextView
        android:id="@+id/textview_leben1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="top|right"
        android:text=""
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_leben" />

    <TextView
        android:id="@+id/textview_leben2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="top|right"
        android:text=""
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_leben" />

    <TextView
        android:id="@+id/textview_leben3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="95dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:gravity="top|right"
        android:text=""
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_leben" />

    <TextView
        android:id="@+id/text_view_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:text="Level: 1"
        android:textSize="24sp"
        app:drawableTopCompat="@drawable/vector_level_neu" />

    <TextView
        android:id="@+id/textview_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:gravity="center|top"
        android:textSize="30sp"
        android:text="30"
        app:drawableTopCompat="@drawable/vector_timer" />

    <TextView
        android:id="@+id/textview_LebenCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:text="Leben: 3"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="798dp"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="402dp"
        android:layout_marginEnd="2dp"
        android:fontFamily="@font/athiti"
        android:lineSpacingExtra="8sp"
        android:padding="8dp"
        android:text="@string/welchen_namen_hatte_java_urspr_nglich"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#505050"
        android:textSize="30sp" />

    <Button
        android:id="@+id/hinweis"
        android:layout_width="156dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="514dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2E7D91"
        android:fontFamily="@font/athiti"
        android:padding="8dp"
        android:shape="rectangle"
        android:text="@string/hinweis"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:drawableTopCompat="@drawable/vector_hinweis" />

    <Button
        android:id="@+id/choice1"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_below="@id/hinweis"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="633dp"
        android:layout_marginEnd="-55dp"
        android:layout_toStartOf="@id/hinweis"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/athiti"
        android:padding="8dp"
        android:text="@string/jasa"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/choice2"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-46dp"
        android:layout_marginBottom="509dp"
        android:layout_toEndOf="@id/hinweis"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/athiti"
        android:padding="8dp"
        android:text="@string/chai"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/choice3"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="137dp"
        android:layout_marginTop="747dp"
        android:layout_marginBottom="400dp"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/athiti"
        android:padding="8dp"
        android:text="Oak"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/choice4"
        android:layout_width="240dp"
        android:layout_height="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="-45dp"
        android:layout_marginBottom="396dp"
        android:layout_toEndOf="@id/hinweis"
        android:background="@drawable/rounded_corners"
        android:fontFamily="@font/athiti"
        android:padding="8dp"
        android:text="Lase"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/quit"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2E7D91"
        android:fontFamily="@font/athiti"
        android:padding="8dp"
        android:text="abbrechen"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:drawableTopCompat="@drawable/vector_close" />

    <TextView
        android:id="@+id/logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="1158dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/quizme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#505050"
        android:textSize="24sp" />

    <Chronometer
        android:id="@+id/textview_chronometer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="720dp"
        android:layout_marginBottom="15dp"
        android:textSize="24sp" />

</RelativeLayout>
