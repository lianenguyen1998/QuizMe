<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width= "match_parent"
    android:layout_height= "match_parent"
    tools:context= ".Startseite"
    android:background="@drawable/hintergrund_liste"
    android:id="@+id/hintergrund_Animation">

    <TextView
        android:id="@+id/logo4"
        android:layout_width="121dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="706dp"
        android:layout_marginBottom="-2dp"
        android:fontFamily="sans-serif-light"
        android:padding="8dp"
        android:text="@string/quizme"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/willkommen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="367dp"
        android:fontFamily="@font/raleway_medium"
        android:lineSpacingExtra="8sp"
        android:padding="8dp"
        android:text="@string/willkommen"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#1E1E1E"
        android:textSize="70sp"
        android:typeface="normal" />

    <Button
        android:id="@+id/start"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:layout_below="@+id/willkommen"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/start"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:iconPadding="8dp" />

    <Button
        android:id="@+id/highscoreliste"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="460dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/highscoreliste"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:iconPadding="8dp" />

    <Button
        android:id="@+id/infotext"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="324dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/raleway_medium"
        android:text="Ã¼ber quizme"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:iconPadding="8dp" />

    <ImageButton
        android:id="@+id/einstellung"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="9dp"
        android:layout_marginBottom="1149dp"
        android:background="@drawable/vector_settings"
        android:contentDescription="@string/todo"
        android:padding="8dp"></ImageButton>

</RelativeLayout>