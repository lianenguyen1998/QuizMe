        app:button_image_disabled="@drawable/vector_forward"
        app:button_image_enabled="@drawable/vector_finish_minigame"
        app:button_left_padding="20dp"
        app:button_right_padding="20dp"
        app:button_top_padding="20dp"
        app:inner_text="SWIPE"
        app:inner_text_background="@color/teal_700"
        app:inner_text_bottom_padding="40dp"
        app:inner_text_left_padding="40dp"
        app:inner_text_right_padding="40dp"
        app:inner_text_top_padding="40dp"
