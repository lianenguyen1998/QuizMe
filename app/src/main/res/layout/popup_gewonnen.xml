<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="720dp"
    android:layout_height="440dp"
    android:layout_gravity="center"
    android:background="@drawable/popup_background"
    android:id="@+id/hintergrundInfo_id"
    android:orientation="vertical">


    <TextView
        android:id="@+id/gewonnen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/du_hast_alle_level_gemeistert"
        android:textAlignment="center"
        android:textColor="#1E1E1E"
        android:textSize="35sp" />

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="516dp"
        android:layout_height="199dp"
        android:layout_gravity="center|top"
        android:src="@drawable/victory" />

    <Button
        android:id="@+id/closeGewonnen"
        android:layout_width="500dp"
        android:layout_height="72dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/button_round"
        android:fontFamily="@font/raleway_medium"
        android:text="@string/zurhighscoreliste" />

</LinearLayout>